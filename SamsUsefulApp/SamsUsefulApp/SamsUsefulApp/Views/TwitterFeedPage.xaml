<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamsUsefulApp.Views.TwitterFeedPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" Android="20, 20, 20, 20" WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ScrollView>
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15" BackgroundColor="#2B303A">
      <Label Text="Sam's Awesome Twitter Feed" Style="{StaticResource pageTitle}" />
      <Entry x:Name="userName" Placeholder="Enter username here" HorizontalTextAlignment="Center" />
      <Button x:Name="getTweets" Text="Get Tweets!" Clicked="GetLastTweets" Style="{StaticResource primaryCTA}" />
      <Label x:Name="firstTweet" Style="{StaticResource keyText}" />
    </StackLayout>
  </ScrollView>
</ContentPage>