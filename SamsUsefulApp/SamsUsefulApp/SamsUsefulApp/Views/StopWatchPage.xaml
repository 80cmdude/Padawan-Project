<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SamsUsefulApp.Views.StopWatchPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"  Android="20, 20, 20, 20" WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15" BackgroundColor="#2B303A">
    <Label Text="Sams's Awesome StopWatch" Style="{StaticResource pageTitle}"/>
    <Button x:Name="btnStartTime" Text="Start" Clicked="StopWatchStart" IsEnabled="True" Style="{StaticResource primaryCTA}" HeightRequest="60" />
    <StackLayout Orientation="Horizontal">
      <Button x:Name="btnResetTime" Text="Reset" Clicked="StopWatchReset" IsEnabled="True" Style="{StaticResource primaryCTA}" HorizontalOptions="FillAndExpand" WidthRequest="100" HeightRequest="60" />
      <Button x:Name="LapTime" Text="Lap" Clicked="Lap" IsEnabled="True" Style="{StaticResource primaryCTA}" HorizontalOptions="FillAndExpand" WidthRequest="100" HeightRequest="30" />
    </StackLayout>
    <Label Text="Time:" Style="{StaticResource secondaryTitle}" />
    <Label x:Name="txtCurrentTime" Style="{StaticResource result}" />
    <ScrollView>
      <StackLayout>
        <Label x:Name="lapTimes" Style="{StaticResource result}" />
      </StackLayout>
    </ScrollView>
  </StackLayout>
</ContentPage>