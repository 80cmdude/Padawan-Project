<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SamsUsefulApp.Views.StopWatchPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="20, 40, 20, 20" Android="20, 20, 20, 20" WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15">
    <Label Text="Sams's Awesome StopWatch" Style="{StaticResource pageTitle}"/>
    <Button x:Name="btnStartTime" Text="Start" Clicked="StopWatchStart" IsEnabled="True" Style="{StaticResource primaryCTA}" />
    <Button x:Name="btnResetTime" Text="Reset" Clicked="StopWatchReset" IsEnabled="True" Style="{StaticResource primaryCTA}" />
    <Label Text="Time:" Style="{StaticResource secondaryTitle}" />
    <Label x:Name="txtCurrentTime" Style="{StaticResource result}" />
  </StackLayout>
</ContentPage>