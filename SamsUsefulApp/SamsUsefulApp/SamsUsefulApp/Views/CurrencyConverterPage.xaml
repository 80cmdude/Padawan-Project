<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:samcontrols="clr-namespace:SamsUsefulApp.Controls;assembly=SamsUsefulApp" x:Class="SamsUsefulApp.Views.CurrencyConverterPage">
  <StackLayout>
      <Label Text="Sam's Awesome Currency Converter" Style="{StaticResource pageTitle}" />
    <StackLayout Orientation="Horizontal">
      <Label Text="Value (GBP)" Style="{StaticResource keyText}" WidthRequest="100" VerticalOptions="Center" />
      <Entry x:Name="GBP" HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>
    </StackLayout>
    <StackLayout>
      <Picker x:Name="CurrencyPicker" SelectedIndex="{Binding SelectedCurrencyIndex}"/>
      <Label Text="Current Exchange Rate" Style="{StaticResource secondaryTitle}"  VerticalOptions="Center"/>
      <Label x:Name="ExchangeRate" Style="{StaticResource result}" />
      <Button Text="Convert" Clicked="ConvertCurrency" Style="{StaticResource primaryCTA}"/>
      <Label Text="Converted Value" Style="{StaticResource secondaryTitle}" />
      <Label x:Name="convertedValue" Style="{StaticResource result}" />
    </StackLayout>
  </StackLayout>
</ContentPage>